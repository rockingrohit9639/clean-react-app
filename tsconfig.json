{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noEmit": true,
    "types": ["@types/node"]
  },
  "include": ["src", ".eslintrc.cjs"],
  "exclude": ["src/main/test/cypress"]
}
